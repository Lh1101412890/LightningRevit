<Window x:Class="LightningRevit_Install.Install"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightningRevit_Install"
        mc:Ignorable="d"
        Height="500" Width="600" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border BorderThickness="1" BorderBrush="Red" Background="Gray" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Canvas x:Name="imageCanvas" Width="582" Height="327">
                    <Image Name="image" Width="580" Height="325" Stretch="Fill" Margin="1,1,1,1"></Image>
                    <Image x:Name="imageOld" Width="580" Height="325" Stretch="Fill" Margin="1,1,1,1"/>
                    <Image x:Name="imageNew" Width="580" Height="325" Stretch="Fill" Margin="1,1,1,1"/>
                </Canvas>
            </Border>
            <Button Content="更新说明" Width="60" Margin="0,0,3,3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="UpdateTextButton_Click"/>
        </Grid>

        <Grid Name="grid3" Grid.Row="1" Margin="15,0,15,0" Visibility="Hidden">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="50"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="0,0,0,0" VerticalAlignment="Center">安装位置：</Label>
            <TextBox Grid.Row="1" Name="location" Width="495" Height="30" HorizontalAlignment="Left" VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Row="1" HorizontalAlignment="Right" Width="60" Height="30" VerticalContentAlignment="Center" Click="GetLocationButton_Click">浏览</Button>
            <Label Grid.Row="2" Margin="0,0,0,0" VerticalAlignment="Center">请设置单独的文件夹，卸载时会删除安装目录下的所有文件！</Label>
            <Button Grid.Row="2" FontSize="15" Width="90" Height="35" Margin="0,0,0,0" HorizontalAlignment="Right" Background="Green" Content="立即安装" VerticalAlignment="Center" Click="InstallButton_Click"></Button>
            <Button Grid.Row="2" FontSize="15" Width="90" Height="35" Margin="0,0,100,0" HorizontalAlignment="Right" Content="返回" VerticalAlignment="Center" Background="White" Click="ReturnButton_Click"></Button>
        </Grid>

        <Grid Name="grid2" Grid.Row="1" Visibility="Visible">
            <Button x:Name="button" Content="快速安装" FontSize="20" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="165" Height="40" Foreground="White" Click="InstallButton_Click">
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFC564B8" Offset="0"/>
                        <GradientStop Color="#FFF57A7A" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border BorderThickness="1" CornerRadius="3" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Background="White" Content="自定义安装" HorizontalAlignment="Right" VerticalAlignment="Bottom" BorderThickness="0" Margin="0,0,20,10" Click="SelfDefiningButton_Click"/>
        </Grid>

        <ProgressBar Name="progress" Grid.Row="1" HorizontalAlignment="Center" Height="20" Margin="0,0,0,0" VerticalAlignment="Center" Width="300" Visibility="Hidden"/>
    </Grid>
</Window>